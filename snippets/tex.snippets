snippet fig "Add Table" w!
\begin{figure}[${1:tbh}]
    \centering
    \includegraphics[width=${2:0.8}\linewidth]{${3:name.ext}}
    \caption{${4:caption}}
    \label{fig:${5:label}}
\end{figure}
${0}
endsnippet

snippet table "Add Table" w!
\begin{table}[${1:tbh}]
    \centering
    \begin{tabular}{${2:c}}
	${3:TableContent}
    \end{tabular}
    \caption{${4:caption}}
    \label{tab:${5:label}}
\end{table}
${0}
endsnippet

snippet foot "add \footnote{}" w!
\footnote{${1:FOOTNOTE}} ${0}
endsnippet

# Equan array
snippet eqn "equationarray environment" !w
\begin{eqnarray}
   && ${1}
    \\\\
   && ${2}
\end{eqnarray}
${0}
endsnippet

# Equation array with label
snippet eqnl "Labeled equation array environment" !w
\begin{eqnarray} \label{eq:${1}}
   &&${2}
    \\\\
   && ${3}
\end{eqnarray}
${0}
endsnippet

# Equation array unnumbered
snippet eqn* "Unnumbered equation array environment" !w
\begin{eqnarray*}
   &&${1}
    \\\\
   &&${2}
\end{eqnarray*}
${0}
endsnippet

