    old = red bold
    new = green bold

[color "status"]
    added = yellow
    changed = green
    untracked = red

[alias]
    a = add --all
    c = commit
    ps = push
    pso = push origin
    psom = push origin master
    s = status
    root = rev-parse --show-toplevel
    lg = log --graph --pretty=format:'%Cred%h%Creset %C(yellow)%an%d%Creset %s %Cgreen(%cr)%Creset' --date=relative

